<UserControl x:Class="BurnSystems.WPF.VerticalResizeableSplitter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BurnSystems.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" SizeChanged="UserControl_SizeChanged" Initialized="UserControl_Initialized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="LeftColumn" x:FieldModifier="private"/>
            <ColumnDefinition Width="2" x:Name="BorderColumn" x:FieldModifier="private"/>
            <ColumnDefinition x:Name="RightColumn" x:FieldModifier="private"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="LeftContent" />
        <Border HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch" 
                Background="Black" 
                Grid.Column="1"
                Cursor="SizeWE"
                MouseDown="Border_MouseDown" 
                MouseMove="Border_MouseMove"
                MouseUp="Border_MouseUp"
                x:Name="BorderContent"></Border>
        <ContentControl Grid.Column="2" x:Name="RightContent"/>
    </Grid>
</UserControl>
